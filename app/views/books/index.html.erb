<div class="container">
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Readers</th>
        <th>Link</th>
      </tr>
    </thead>
    <tbody>
     <% @books.find_each do |book| %>
      <tr>
        <td><%=book.title%></td>
        <td><%=book.authors%></td>
        <td><%=book.readers.count%></td>
        <td><%= link_to("See it on Amazon", "#{book.link}")%></td>
      </tr>
     <% end %>
    </tbody>
  </table>
</div>

