<div class="container">
 <div class="well bs-component">
  <div class="form-horizontal">
   <fieldset>

   <% if params[:action] == "edit" %>
    <legend>Edit Book</legend>
   <%else%>
    <legend>Add a Book</legend>
   <% end %>
     <%= form_for @book do |f| %>
      <div class="form-group">
       <%= f.label :title, 'Title', class: "col-lg-2 control-label"%>
        <div class="col-lg-10">
         <%= f.text_field :title, class: "form-control"%>
        </div>
      </div>
      <div class="form-group">
       <%= f.label :authors, 'Author', class: "col-lg-2 control-label"%>
        <div class="col-lg-10">
         <%= f.text_field :authors, class: "form-control"%>
        </div>
      </div>
      <div class="form-group">
       <%= f.label :link, 'Link', class: "col-lg-2 control-label"%>
        <div class="col-lg-10">
         <%= f.text_field :link, class: "form-control"%>
        </div>
      </div>      
      <%= f.hidden_field :teacher_id, value: current_user.id%>
    </fieldset>
   </div>
  </div>
       <%= f.submit "Submit", class:"btn btn-primary" %>
    <% end %>
</div>
