<div class="container">
  <div class="form-horizontal">
   <fieldset>
    <legend><strong>Update Password</strong><p>It's ok, it happens to all of us.</p></legend>
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>

      <%= hidden_field_tag :email, @user.email %>

      <div class="form-group">
      <%= f.label :password, class: "col-sm-2 control-label"%>
        <div class="col-sm-10">
         <%= f.password_field :password, id: "inputPassword", class: "form-control"%>
        </div>
      </div>
        <div class="form-group">
      <%= f.label :password_confirmation, class: "col-sm-2 control-label"%>
        <div class="col-sm-10">
         <%= f.password_field :password_confirmation, id: "inputPasswordConfirmation", class: "form-control"%>
        </div>
      </div>
    </fieldset>
  </div>
       <%= f.submit "Update Password", class:"btn btn-primary col-md-offset-2" %>
    <% end %>
</div>