<div class="container">
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Course Name</th>
        <th>Number of Students</th>
        <th>Some Other Information</th>
      </tr>
    </thead>
    <tbody>
     <% @courses.where(teacher_id: current_user.id).find_each do |course| %>
      <tr>
        <td><%=course.name%></td>
        <td><%=course.students.count%></td>
        <td><%=course.teacher.full_name%></td>
      </tr>
     <% end %>
    </tbody>
  </table>
</div>
