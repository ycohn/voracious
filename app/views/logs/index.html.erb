<div class="container">
  <div class="page-header">
    <h1 id="timeline">Timeline</h1>
  </div>
  <ul class="timeline">
  <% @logs.reverse.each_with_index do |log, index| %>
  <% if (index).even? %>
    <li class="timeline-inverted">
  <% else %>
    <li>
  <% end %>
      <div class="timeline-badge"><i class="glyphicon glyphicon-book"></i></div>
      <div class="timeline-panel">
        <div class="timeline-heading">
          <h4 class="timeline-title"><%= log.book.title %></h4>
          <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> <%= log.created_at.strftime("%B %-d, %Y") %></small></p>
        </div>
        <div class="timeline-body">
          <p><%= log.content %></p>
          <p><small class="text-muted"><i class="glyphicon glyphicon-user"></i> <%= log.user.full_name %></small></p>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
</div>

